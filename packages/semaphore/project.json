{
  "name": "semaphore",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/contracts/src",
  "projectType": "application",
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/semaphore",
        "command": "hardhat run scripts/download-snark-artifacts.ts && hardhat test"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/semaphore",
        "command": "hardhat compile"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "cwd": "packages/semaphore",
        "command": "hardhat deploy:semaphore-voting --network localbasegoerli"
      }
    },
    "downloadSnarkArtifacts": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/semaphore",
        "command": "hardhat run scripts/download-snark-artifacts.ts"
      }
    }
  },
  "tags": ["type:lib"]
}
