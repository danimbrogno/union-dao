{
  "name": "contracts",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/contracts/src",
  "projectType": "application",
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/contracts",
        "command": "forge test --ffi"
      }
    },
    "test:base": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/contracts",
        "command": "forge test --fork-url https://goerli.base.org --ffi"
      }
    },
    "compile": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/contracts",
        "command": "forge compile"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/contracts",
        "command": "anvil --chain-id 31337 --fork-url https://mainnet.infura.io/v3/$NX_ANVIL_INFURA_API_KEY --fork-block-number $NX_ANVIL_FORK_BLOCK_NUMBER"
      }
    },
    "serve:base": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/contracts",
        "command": "anvil --chain-id 31337 --fork-url https://goerli.base.org --fork-block-number $NX_ANVIL_BASE_FORK_BLOCK_NUMBER"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/contracts",
        "command": "forge script script/AppDeployer.s.sol:AppDeployer --fork-url http://localhost:8545 --broadcast --ffi"
      },

      "configurations": {}
    }
  },
  "tags": ["type:lib"]
}
